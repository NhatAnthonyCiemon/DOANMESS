<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitCenter"
        android:background="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/rectangle_chat" />

    <ImageView
        android:layout_width="203dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="40dp"
        android:src="@drawable/corner_rectangle_chat" />


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Top Layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_marginTop="40dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp" >

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:maxWidth="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_back_arrow"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/name_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/user_avatar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_avatar"
                    android:background="@android:color/transparent"
                    android:layout_weight="1" />
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:paddingStart="10dp"
                        android:text="user"
                        android:textColor="#FFFFFF" />

                    <TextView
                        android:id="@+id/user_status"
                        android:layout_width="78dp"
                        android:layout_height="20dp"
                        android:paddingStart="10dp"
                        android:text="Online"
                        android:textColor="#FFFFFF" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:layout_marginTop="5dp">
                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:maxWidth="20dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_call"
                    android:layout_weight="1" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_video_call"
                    android:layout_weight="1" />

                <ImageButton
                    android:id="@+id/info_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_info"
                    android:layout_weight="1" />
            </LinearLayout>
        </LinearLayout>

        <!-- Message List -->

        <!-- Input Bar -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/main_chat_recycler"
            android:layout_width="match_parent"
            android:layout_height="659dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:padding="10dp"
            android:scrollbars="vertical" />

        <TextView
            android:id="@+id/blocked_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="You can't no longer chat to this user."
            android:visibility="invisible" />

        <LinearLayout
            android:layout_width="354dp"
            android:layout_height="80dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:id="@+id/input_bar"
            android:layout_weight="1">

            <FrameLayout
                android:layout_width="250dp"
                android:layout_height="80dp">

                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="match_parent"
                    android:scaleType="fitStart"
                    android:src="@drawable/input_bar" />

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center|clip_vertical|center_vertical">

                    <ImageButton
                        android:id="@+id/mic_button"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_mic" />

                    <EditText
                        android:id="@+id/message_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Hello"
                        android:background="@android:color/transparent"
                        android:focusableInTouchMode="true"/>

                    <ImageButton
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:background="@android:color/transparent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_attach" />
                </LinearLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/send_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="start"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/eclipse" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_send"
                    android:layout_gravity="start"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="8dp"/>
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>